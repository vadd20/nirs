<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="480" prefWidth="800" style="-fx-background-color: #4CAF50;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.FxmlControllerAlternative">
  <children>
    <!-- Выбор файла -->
    <Label layoutX="10" layoutY="10" text="Выберете файл .wav" textFill="#FFFFFF"/>
    <Button fx:id="button_select" layoutX="10" layoutY="40" onAction="#open" prefHeight="30" prefWidth="120" text="Открыть" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>

    <!-- Управление воспроизведением -->
    <Label layoutX="10" layoutY="90" text="Управление воспроизведением" textFill="#DDDDDD"/>
    <Button fx:id="button_play" layoutX="10" layoutY="120" onAction="#play" prefHeight="30" prefWidth="80" style="-fx-background-color: #052419; -fx-text-fill: white;"/>
    <Button fx:id="button_pause" layoutX="100" layoutY="120" onAction="#pause" prefHeight="30" prefWidth="80" style="-fx-background-color: #052419; -fx-text-fill: black;"/>
    <Button fx:id="button_stop" layoutX="190" layoutY="120" onAction="#stop" prefHeight="30" prefWidth="80" style="-fx-background-color: #052419; -fx-text-fill: white;"/>

    <!-- Закрытие программы -->
    <Button fx:id="buttonClose" layoutX="10" layoutY="170" onAction="#clickClose" prefHeight="30" prefWidth="120" text="Закрыть программу" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
  </children>
</AnchorPane>
