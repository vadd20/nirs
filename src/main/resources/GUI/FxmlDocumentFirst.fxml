<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="250.0" prefWidth="370.0" style="-fx-background-color: #4CAF50;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.FxmlControllerFirst">
    <children>
        <Label layoutX="30" layoutY="20" text="Выбрать файл .wav" textFill="#FFFFFF"/>
        <Button fx:id="button_select" layoutX="30.0" layoutY="50.0" onAction="#open" prefHeight="30" prefWidth="120" text="Открыть" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>

        <Label layoutX="30" layoutY="110" text="Управление воспроизведением" textFill="#DDDDDD"/>
        <Button fx:id="button_play" layoutX="30.0" layoutY="140.0" onAction="#play" prefHeight="30" prefWidth="80" style="-fx-background-color: #052419; -fx-text-fill: white;"/>
        <Button fx:id="button_pause" layoutX="145.0" layoutY="140.0" onAction="#pause" prefHeight="30" prefWidth="80" style="-fx-background-color: #052419; -fx-text-fill: black;"/>
        <Button fx:id="button_stop" layoutX="260.0" layoutY="140.0" onAction="#stop" prefHeight="30" prefWidth="80" style="-fx-background-color: #052419; -fx-text-fill: white;"/>

        <Button fx:id="buttonClose" layoutX="200.0" layoutY="50.0" onAction="#clickClose" prefHeight="30" prefWidth="120" text="Закрыть программу" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </children>
</AnchorPane>
